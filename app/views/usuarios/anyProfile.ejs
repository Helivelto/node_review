<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>/@<%= userProfile[0].nome_usuario %>
    </title>
    <!-- css -->
    <!-- css -->
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/styleHome/styleHome.css">
    <link rel="stylesheet" href="css/styleHome/stylePerfil.css">
    <link rel="stylesheet" href="css/styleReview/styleReview.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <!-- Pattaya -->
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">
    <!-- Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
    <!-- FAVICON -->
    <link rel="shortcut icon" href="img/R.svg" type="image/x-icon">
</head>

<body>

    <div id="container">

        <header>

            <span class="logotipo"><a href="/">Reviewer.com</a></span>
            <!-- <img src="/img/r_ofc.png" alt=""> -->

            <nav id="menu_hamburguer">
                <input type="checkbox" name="menu_checkbox" id="menu_checkbox">
                <div class="menu_bar" id="bar1"></div>
                <div class="menu_bar" id="bar2"></div>
                <div class="menu_bar" id="bar3"></div>

                <div id="modal_box"></div>

                <div class="menu">
                    <ul class="menu_ul">
                        <div class="user">
                            <img src="img/user_icon.svg" />
                            <li><a href="/perfil">Perfil</a></li>
                        </div>

                        <div class="config">
                            <img src="img/config_icon.svg" />
                            <li><a href="/config">Configurações</a></li>
                        </div>

                        <!-- <div class="home">
                                <img src="img/home_icon.svg" />
                                <li><a href="/">Voltar ao inicio</a></li>
                            </div> -->

                        <div class="logout">
                            <img src="img/Vector.svg" />
                            <li><a href="/logout">Sair</a></li>
                        </div>
                    </ul>
                </div>
            </nav>

            <nav id="menu_vertical">
                <ul class="menu_ul_vertical">
                    <div class="user-vtc">
                        <li><a href="/perfil">Perfil</a></li>
                    </div>

                    <div class="config-vtc">
                        <li><a href="/config">Configurações</a></li>
                    </div>

                    <!-- <div class="home">
                        <li><a href="/">Inicio</a></li>
                    </div> -->

                    <div class="logout-vtc">
                        <li><a href="/logout">Sair</a></li>
                    </div>
                </ul>
            </nav>

        </header>

        <main>

            <div id="box_user">

                <% if(userProfile[0].foto_usuario == null || userProfile[0].foto_usuario=='null' ) {%>
                    <img src="/img/userpng.svg" alt="">
                <% } else { %>
                    <img src="../../../uploads/<%= userProfile[0].foto_usuario %>" alt="">
                <% } %>
                
                <span>@<%= userProfile[0].nome_usuario %></span>

            </div>

            <div id="box_main">

                <span>Reviews de <%= userProfile[0].nome_usuario %>:</span>

                <% if(userProfile.length==0) { %>
                    <br> <br>
                    <span class="msg_no-review">Você ainda não tem reviews</span>
                    <% } %>

                        <% for(let i=0; i < userProfile.length; i++){%>

                            <div class="box_review-perfil">
                                <a href="review?id=<%=userProfile[i].id%>">
                                    <%= userProfile[i].titulo_review %>
                                </a>
                                <span id="span_produto">
                                    <%= userProfile[i].tema %>
                                </span>
                            </div>

                            <% } %>


            </div>

        </main>

        <footer>
            <div id="create_post"><a href="/add-new-review">Criar Review</a></div>
        </footer>

    </div>

</body>

</html>