<body>

    <div id="container">

        <header class="header-review">

            <div id="back_box">
                <a href="javascript:history.back()"><img src="/img/back_icon_rw.svg" alt="Botão para voltar para a página inicial"></a>
                <h3>Review</h3>
            </div>

        </header>




        <div id="box_main-rw" class="review_box">

            <%# for(let i=0; i < review.length; i++){%>
                <div id="oneReview">
                    <span id="span_autor">
                        <%= review[0].autor %>
                    </span>
                    <span id="span_titulo">
                        <%= review[0].titulo_review %>
                    </span>
                    <span id="span_produto">
                        <%= review[0].tema %>
                    </span>
                    <p>
                        <%= review[0].review %>
                    </p>
                </div>
            <%# } %>



