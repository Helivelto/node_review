<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review</title>

    <!-- css -->
    <link rel="stylesheet" href="css/reset.css">
    <link rel="stylesheet" href="css/styleHome/styleHome.css">
    <link rel="stylesheet" href="css/styleProdutos/styleProdutos.css">
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <!-- Pattaya -->
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">
    <!-- Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
</head>

<body>

    <div id="container">

        <header>

            <span class="logo"><a href="/">Reviewr.com</a></span>

            <nav>
                <input type="checkbox" name="menu_checkbox" id="menu_checkbox">
                <div class="menu_bar" id="bar1"></div>
                <div class="menu_bar" id="bar2"></div>
                <div class="menu_bar" id="bar3"></div>

                <div class="menu">
                    <ul class="menu_ul">
                        <li><a href="">Usuario</a></li>
                        <li><a href="add-new-review">Fazer Review</a></li>
                        <li><a href="reviews">Reviews</a></li>
                    </ul>
                </div>
            </nav>

        </header>

        <div id="box_main" class="review_box">

            <% for(let i=0; i < review.length; i++){%>
                <div class="box_review">
                    <span id="span_autor">
                        <%= review[0].autor %>
                    </span>
                    <span id="span_titulo">
                        <%= review[0].titulo_review %>
                    </span>
                    <span id="span_produto">
                        <%= review[0].produto %>
                    </span>
                    <p>
                        <%= review[0].review %>
                    </p>
                </div>
            <% } %>



